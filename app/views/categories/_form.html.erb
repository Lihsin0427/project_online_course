<% if @category.errors.any? %>
  <ul>
  <% @category.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for(@category) do |form| %>

  <div class="fields">
    <%= form.label :name, '課程主題' %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit  btn_label %>
  </div>

<% end %>